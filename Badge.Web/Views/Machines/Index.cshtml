@using Badge.Web.Models.Shared
@using Badge.Web.Models.Machines


@model PaginationViewModel<MachinesViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<a asp-action="Create">
    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Create New">
        <span class="glyphicon glyphicon-plus"></span>
    </button>
</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data.First().IpMachine)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.First().MacAddress)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IpMachine)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MacAddress)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="...">


                                <a asp-action="Edit" asp-route-id="@item.Nome">
                                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </button>
                                </a>
                                
                                
                                    <a asp-action="Details" asp-route-id="@item.Nome" >
                                        <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Details">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                        </a>
                                
                            <a asp-action="Delete" asp-route-id="@item.Nome">
                                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </button>
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div class="center-block">

        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li>
                    <a href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>


                @for (int i = 0; i < (Model.Count / 10) + 1; i++)
            {

                    <li>
                        <a asp-controller="Machines" asp-action="Index" asp-route-skip="@(i * 10)" asp-route-take="10">@(i + 1)</a>
                    </li>
                }

                <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

    </div>

@section Scripts{
<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
</script>
}
