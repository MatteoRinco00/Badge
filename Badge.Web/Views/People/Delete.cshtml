@model Badge.EF.Entity.Person

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="IdPerson" />
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cognome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cognome)
        </dd>
    </dl>


    <form asp-action="Delete">

        <a asp-action="Delete" asp-route-id="@Model.IdPerson">

            <button type="submit" class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Delete">

                <i class="large material-icons">delete</i>
            </button>
        </a>



        <a asp-action="Index">
            <button type="button" class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Back to List">
                <i class="material-icons">arrow_back</i>
            </button>
        </a>

    </form>
</div>

@section Scripts{
    <script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
    </script>
}


